<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/updateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Post"
        android:textSize="25sp"
        android:textColor="#0B0A0A"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textUpdateInputLayout5"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/updateTextView"
        tools:layout_editor_absoluteX="1dp">

        <EditText
            android:id="@+id/titleUpdateEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter title"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textUpdateInputLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/textUpdateEditTextId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Text"
                android:layout_marginBottom="40dp"/>
        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>